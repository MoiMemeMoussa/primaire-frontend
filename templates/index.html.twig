{% extends 'base.html.twig' %}

{% block title %}
    Bienvenue
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="main.css">
{% endblock %}

{% block body %}
    {{ parent() }}
    <main>
        <form>
            <div class="form-group row">
                <label for="school_year_field" class="col col-form-label">Choisir une ann&eacute;e scolaire :</label>
                <div class="col">
                    <select id="school_year_field" class="form-control">
                        {% for schoolYear in schoolYears %}
                            <option value="{{ schoolYear.idAnnee }}">{{ schoolYear.value }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div id="school_classes">
                {% for index, schoolClass in schoolClasses %}
                    {{ schoolClass }}
                {% endfor %}
                <div class="form-group row">
                    <label for="class" class="col col-form-label">Classe :</label>
                    <div class="col">
                        <input id="class" class="form-control" type="text"/>
                    </div>
                    <label for="teacher" class="col col-form-label">Enseignant :</label>
                    <div class="col">
                        <input id="teacher" class="form-control" type="text"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="class_2" class="col col-form-label">Classe 2 :</label>
                    <div class="col">
                        <input id="class_2" class="form-control" type="text"/>
                    </div>
                    <label for="teacher_2" class="col col-form-label">Enseignant 2 :</label>
                    <div class="col">
                        <input id="teacher_2" class="form-control" type="text"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="class_n" class="col col-form-label">Classe N :</label>
                    <div class="col">
                        <input id="class_n" class="form-control" type="text"/>
                    </div>
                    <label for="teacher_n" class="col col-form-label">Enseignant N :</label>
                    <div class="col">
                        <input id="teacher_n" class="form-control" type="text"/>
                    </div>
                </div>
            </div>
        </form>
    </main>
{% endblock %}
