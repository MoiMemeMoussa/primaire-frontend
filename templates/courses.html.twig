{% extends 'base.html.twig' %}

{% block title %}
    Cr&eacute;er mati&egrave;re
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="main.css">
{% endblock %}

{% block body %}
    {{ parent() }}
    <h3>Liste des mati&egrave;res :</h3>
    <ul>
        {% for course in courses %}
            <li>{{ course.name }}</li>
        {% endfor %}
    </ul>
    <form action="{{ path('teachers') }}">
        <fieldset>
            <legend>Cr&eacute;er une mati&egrave;re</legend>
            <div class="form-group row">
                <label for="course" class="col col-form-label">Mati&egrave;re :</label>
                <div class="col">
                    <input id="course" class="form-control" type="text"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="group" class="col col-form-label">Groupe :</label>
                <div class="col">
                    <input id="group" class="form-control" type="text"/>
                </div>
            </div>
            <input type="submit" class="btn btn-primary" value="Valider"/>
        </fieldset>
    </form>
{% endblock %}
