{% extends 'base.html.twig' %}

{% block title %}Créer enseignant{% endblock %}

{% block content_title %}Enseignants{% endblock %}

{% block content %}
    <main>
        <h3>Liste des enseignants :</h3>
        <ul>
            {% for teacher in teachers %}
                <li>{{ teacher.title }} {{ teacher.firstName }} {{ teacher.lastName }}</li>
            {% endfor %}
        </ul>
        <h3>Nouvel enseignant :</h3>
        {{ form(teacherForm) }}
        <a href="{{ path('students') }}">Créer un étudiant</a>
    </main>
{% endblock %}
