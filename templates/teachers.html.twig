{% extends 'base.html.twig' %}

{% block title %}Enseignants{% endblock %}

{% block content %}
    <main>
        <h2>Liste des enseignants :</h2>
        <ul>
            {% for teacher in teachers %}
                <li>{{ teacher.title }} {{ teacher.firstName }} {{ teacher.lastName }}</li>
            {% endfor %}
        </ul>
        <h2>Nouvel enseignant :</h2>
        {{ form(teacherForm) }}
    </main>
{% endblock %}
